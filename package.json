{
  "name": "shopify-node-mongodb-next-app",
  "version": "0.1.9",
  "description": "Shopify Boilerplate Code written in Next, Node, MongoDB and GraphQL",
  "main": "server.js",
  "scripts": {
    "update": "ncu -u",
    "update:check": "ncu",
    "lint": "next lint",
    "tunnel": "lt --port 8081",
    "dev": "rm -rf .next && node server.js",
    "build": "rm -rf .next && NEXT_TELEMETRY_DISABLED=1 next build",
    "start": "npm run build && NODE_ENV=production node server.js"
  },
  "author": {
    "name": "Harshdeep Singh Hura",
    "url": "https://harshdeephura.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kinngh/shopify-node-mongodb-next-app.git"
  },
  "license": "MIT",
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@shopify/app-bridge-react": "^2.0.25",
    "@shopify/app-bridge-utils": "^2.0.25",
    "@shopify/koa-shopify-auth": "^5.0.3",
    "@shopify/koa-shopify-webhooks": "^4.4.4",
    "@shopify/polaris": "^9.5.0",
    "cryptr": "^6.0.3",
    "dotenv": "^16.0.0",
    "graphql": "^16.3.0",
    "koa": "^2.13.4",
    "koa-combine-routers": "^4.0.2",
    "koa-router": "^10.1.1",
    "mongoose": "^6.3.1",
    "next": "^12.1.5",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "store": "^2.0.12",
    "webpack": "^5.72.0"
  },
  "devDependencies": {
    "eslint": "^8.14.0",
    "eslint-config-next": "12.1.5",
    "localtunnel": "^2.0.2",
    "npm-check-updates": "^12.5.9"
  }
}
